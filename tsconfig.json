{
  "compilerOptions": {
    "allowJs": false,
    "declaration": true,
    "esModuleInterop": true,
    "lib": [
      "ESNext",
      "dom"
    ],
    "module": "ESNext",
    "moduleResolution": "Node",
    "noImplicitAny": false,
    "outDir": "dist",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "ESNext",
    "paths": {
      "razomy": ["./razomy/index.ts"],
      "razomy.*": ["./razomy/*/index.ts"]
    }
  },
  "exclude": [
    "**/node_modules",
    "**/dist"
  ]
}