{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "declarationDir": "dist",
    "typeRoots": [
      "node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "razomy.ecmascript/*": [
        "src/*"
      ]
    },
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "esModuleInterop": true,
    "lib": [
      "es6",
      "dom"
    ],
    "strict": true,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    // for typeorm
    "emitDecoratorMetadata": true
    // for typeorm
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
  ]
}
