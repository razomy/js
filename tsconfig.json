{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "rootDir": "src",
    "declaration": true,
    "esModuleInterop": true,
    "lib": [
      "ESNext",
      "dom"
    ],
    "module": "ESNext",
    "moduleResolution": "Node",
    "noImplicitAny": false,
    "outDir": "dist",
    "resolveJsonModule": true,
    "strict": true,
    "target": "ESNext"
  },
  "include": [
    "src/**/*"
  ]
}
