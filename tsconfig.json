{
  "compilerOptions": {
    "allowJs": false,
    "declaration": true,
    "esModuleInterop": true,
    "lib": [
      "ESNext",
      "dom"
    ],
    "baseUrl": ".",
    "rootDir": ".",
    "module": "ESNext",
    "moduleResolution": "Node",
    "noImplicitAny": false,
    "outDir": "dist",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "ESNext"
  },
  "exclude": [
    "**/node_modules",
    "**/dist"
  ]
}