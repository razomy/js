{
  "devDependencies": {
    "@types/jest": "30.0.0",
    "jest": "30.2.0",
    "ts-jest": "29.4.5",
    "ts-node": "10.9.2",
    "typescript": "5.9.3",
    "@types/node": "24.10.1"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "default": "./dist/*.js"
    }
  },
  "bin": {
    "razomy": "./dist/cli/bin/razomy.js"
  },
  "license": "Apache-2.0",
  "name": "razomy.js",
  "packageManager": "npm@10.8.2",
  "private": true,
  "scripts": {
    "init": "npm install",
    "start:dev": "tsc --project tsconfig.lib.json --watch",
    "build": "rm -rf dist && tsc --project tsconfig.lib.json",
    "test": "jest"
  },
  "type": "module",
  "engines": {
    "node": "24.5.0"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],

  "version": "0.0.0",
  "workspaces": [
    "src/*"
  ]
}
