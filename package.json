{
  "devDependencies": {
    "@types/jest": "30.0.0",
    "@types/lodash": "^4.17.21",
    "@types/node": "24.10.1",
    "jest": "30.2.0",
    "ts-jest": "29.4.5",
    "ts-node": "10.9.2",
    "typescript": "5.9.3"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "default": "./dist/*.js"
    }
  },
  "bin": {
    "razomy": "./dist/cli/bin/razomy.js"
  },
  "license": "Apache-2.0",
  "name": "razomy",
  "packageManager": "npm@10.8.2",
  "private": true,
  "scripts": {
    "init": "npm install",
    "start:dev": "tsc --project tsconfig.lib.json --watch",
    "build": "rm -rf dist && tsc --project tsconfig.lib.json && mkdir -p ./_releases && npm pack --pack-destination=_releases",
    "deploy:local": "npm run build && npm uninstall -g razomy.js && cd _releases && npm i -g razomy.js-0.0.0.tgz",
    "test": "jest"
  },
  "type": "module",
  "engines": {
    "node": "24.5.0"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src/*/package.json"
  ],
  "version": "0.0.0",
  "workspaces": [
    "src/dates",
    "src/async",
    "src/bytes",
    "src/compression",
    "src/express",
    "src/git",
    "src/google",
    "src/openai",
    "src/socket",
    "src/vue"
  ],
  "dependencies": {
    "date-fns": "^4.1.0",
    "lodash": "^4.17.21",
    "razomy.js.async": "./src/async",
    "razomy.js.bytes": "./src/bytes",
    "razomy.js.compression": "./src/compression",
    "razomy.js.dates": "./src/dates",
    "razomy.js.express": "./src/express",
    "razomy.js.git": "./src/git",
    "razomy.js.google": "./src/google",
    "razomy.js.openai": "./src/openai",
    "razomy.js.socket": "./src/socket",
    "razomy.js.vue": "./src/vue"
  }
}
